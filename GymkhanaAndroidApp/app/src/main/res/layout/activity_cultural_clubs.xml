<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cultural_clubs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.ac.iiti.gymakhanaiiti.activity.CulturalClubs">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textBackground">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.daimajia.slider.library.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"/>
            </FrameLayout>
            <!-- list Begins -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/music_club_layout"
                android:background="@drawable/ripple_main"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/music"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Music Club"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/photography_club_layout"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/lens"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Photography Club"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/literary_club"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/literary"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Literary Club"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/dance_club"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/dance"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Dance Club"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/quiz_club"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/quiz"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Quiz Club"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/drama_club"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/drama"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Dramatics Club"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/hindi_sahitya_samiti_layout"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/srijan_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Hindi Sahitya Samiti(Srijan)"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/docm_layout"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/docm_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="Designers' Guild(DOCM)"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/listLayoutHeight"
                android:clickable="true"
                android:onClick="onClick"
                android:id="@+id/fine_art_club_layout"
                android:background="@drawable/ripple_main"
                android:layout_marginTop="@dimen/gapBetweenListItems"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/listImageDimen"
                    android:layout_height="@dimen/listImageDimen"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/listimagemarginleft"
                    android:src="@drawable/fine_arts_club"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/listtextmarginleft"
                    android:textSize="@dimen/listTextSize"
                    android:text="The Fine Arts Club (Kalakriti)"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/listTextColor"/>
            </LinearLayout>
            <!-- list closed -->
        </LinearLayout>
    </ScrollView>
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/app_bar"
        android:title="Cultural Clubs"
        android:background="@color/transparent"
        android:theme="@style/customToolbarTheme"/>
    </FrameLayout>
</LinearLayout>
