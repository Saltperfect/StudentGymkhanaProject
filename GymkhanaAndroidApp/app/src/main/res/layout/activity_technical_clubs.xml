<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cultural_clubs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.ac.iiti.gymakhanaiiti.activity.TechnicalClubs">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/textBackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.daimajia.slider.library.SliderLayout
                        android:id="@+id/slider"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"/>
                </FrameLayout>
                <!-- list Begins -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listLayoutHeight"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:id="@+id/robotics_club_layout"
                    android:background="@drawable/ripple_main"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/listImageDimen"
                        android:layout_height="@dimen/listImageDimen"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/listimagemarginleft"
                        android:src="@drawable/robotics"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/listtextmarginleft"
                        android:textSize="@dimen/listTextSize"
                        android:text="Robotics Club"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/listTextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listLayoutHeight"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:id="@+id/programming_club"
                    android:background="@drawable/ripple_main"
                    android:layout_marginTop="@dimen/gapBetweenListItems"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/listImageDimen"
                        android:layout_height="@dimen/listImageDimen"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/listimagemarginleft"
                        android:src="@drawable/icon_code"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/listtextmarginleft"
                        android:textSize="@dimen/listTextSize"
                        android:text="Programming Club"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/listTextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listLayoutHeight"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:id="@+id/electronic_club"
                    android:background="@drawable/ripple_main"
                    android:layout_marginTop="@dimen/gapBetweenListItems"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/listImageDimen"
                        android:layout_height="@dimen/listImageDimen"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/listimagemarginleft"
                        android:src="@drawable/electronics"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/listtextmarginleft"
                        android:textSize="@dimen/listTextSize"
                        android:text="Electronics Club"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/listTextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listLayoutHeight"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:id="@+id/astronomy_club"
                    android:background="@drawable/ripple_main"
                    android:layout_marginTop="@dimen/gapBetweenListItems"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/listImageDimen"
                        android:layout_height="@dimen/listImageDimen"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/listimagemarginleft"
                        android:src="@drawable/astronomy"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/listtextmarginleft"
                        android:textSize="@dimen/listTextSize"
                        android:text="Astronomy Club"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/listTextColor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/listLayoutHeight"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:id="@+id/unmanned_club"
                    android:background="@drawable/ripple_main"
                    android:layout_marginTop="@dimen/gapBetweenListItems"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/listImageDimen"
                        android:layout_height="@dimen/listImageDimen"
                        android:scaleType="fitXY"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/listimagemarginleft"
                        android:src="@drawable/unmanned"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/listtextmarginleft"
                        android:textSize="@dimen/listTextSize"
                        android:text="Unmanned Club"
                        android:textAlignment="center"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/listTextColor"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_bar"
            android:title="Cultural Clubs"
            android:background="@color/transparent"
            android:theme="@style/customToolbarTheme"/>
    </FrameLayout>
</LinearLayout>
